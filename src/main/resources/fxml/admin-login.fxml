<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>



<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bloodbank.controllers.AdminLoginController"
            prefWidth="800" prefHeight="600">


    <top>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="40" right="20" bottom="20" left="20" />
            </padding>

            <Label text="Admin Login" textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="24" />
                </font>
            </Label>

            <Label text="Enter your credentials to access the admin dashboard"
                   textAlignment="CENTER" opacity="0.7">
                <font>
                    <Font size="14" />
                </font>
            </Label>

        </VBox>
    </top>


    <center>
        <VBox alignment="CENTER" spacing="30" maxWidth="400">


            <GridPane alignment="CENTER" hgap="15" vgap="20">


                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font size="14" />
                    </font>
                </Label>

                <TextField fx:id="usernameField" prefWidth="200"
                           promptText="Enter username"
                           GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <font>
                        <Font size="14" />
                    </font>
                </TextField>


                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <font>
                        <Font size="14" />
                    </font>
                </Label>

                <PasswordField fx:id="passwordField" prefWidth="200"
                               promptText="Enter password"
                               GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font>
                        <Font size="14" />
                    </font>
                </PasswordField>

            </GridPane>


            <Label fx:id="statusLabel" text="" textAlignment="CENTER" wrapText="true">
                <font>
                    <Font size="12" />
                </font>
            </Label>


            <HBox alignment="CENTER" spacing="20">

                <Button fx:id="loginButton" text="Login"
                        prefWidth="100" prefHeight="35"
                        onAction="#handleLogin" defaultButton="true">
                    <font>
                        <Font size="14" />
                    </font>
                </Button>

                <Button fx:id="backButton" text="Back"
                        prefWidth="100" prefHeight="35"
                        onAction="#handleBack" cancelButton="true">
                    <font>
                        <Font size="14" />
                    </font>
                </Button>

            </HBox>

        </VBox>
    </center>


    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="40" left="20" />
            </padding>

            <Label text="Default Credentials"
                   textAlignment="CENTER" opacity="0.6">
                <font>
                    <Font size="12" />
                </font>
            </Label>

        </VBox>
    </bottom>

</BorderPane>